@page "/"
@using BlazorDemos.Shared;
@namespace BlazorDemos.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
    string scriptPath = "";
    string pdfscriptPath = "";
    string docscriptPath = "";
#if (DEBUG || STAGING)
    scriptPath = "_content/Syncfusion.Blazor.Core/scripts/";
    pdfscriptPath = "_content/Syncfusion.Blazor.PdfViewer/scripts/";
    docscriptPath = "_content/Syncfusion.Blazor.WordProcessor/scripts/";
#else
    scriptPath = "https://cdn.syncfusion.com/blazor/19.2.51";
    pdfscriptPath = "https://cdn.syncfusion.com/blazor/19.2.51";
    docscriptPath = "https://cdn.syncfusion.com/blazor/19.2.51";
#endif
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Google Tag Manager -->
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                    new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
                j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
                    'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-WLQL39J');</script>
    <!-- End Google Tag Manager -->

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <component type="typeof(SampleMetaData)" render-mode="Server" />

    <base href="~/" />
    <link href="~/styles/bootstrap.min.css" rel="stylesheet" />
    <link href="BlazorDemos.styles.css" rel="stylesheet" />
    <component type="typeof(DynamicResources)" render-mode="Static" />

    <environment include="Development">
        <link href="~/styles/common/devices.css" rel="stylesheet" media="(max-width: 1024px)" />
    </environment>
    <environment include="Production">
        <link href="~/styles/common/devices.min.css" rel="stylesheet" media="(max-width: 1024px)" />
    </environment>

    <script src="_framework/blazor.polyfill.js"></script>
    <script src="~/scripts/common/index.js" async></script>
    <script src="~/scripts/common/lodash.min.js" async></script>
    <script src="@scriptPath/syncfusion-blazor.min.js" async></script>
    <script src="@pdfscriptPath/syncfusion-blazor-pdfviewer.min.js" async></script>
    <script src="@docscriptPath/syncfusion-blazor-documenteditor.min.js" async></script>

</head>
<body>
    <div hidden id="sync-analytics" data-queue="EJ2 - Blazor - Demos"></div>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WLQL39J" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    
    <div class="dynamic-resources"></div>

    <component type="typeof(App)" render-mode="ServerPrerendered" />
    <script src="_framework/blazor.server.js" autostart="true"></script>
</body>
</html>
