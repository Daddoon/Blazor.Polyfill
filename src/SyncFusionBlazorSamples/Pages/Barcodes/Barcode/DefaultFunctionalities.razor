@page "/barcodes/default-functionalities"

@using Syncfusion.Blazor.BarcodeGenerator

@inherits SampleBaseComponent;

<SampleDescription>
    <p>This sample visualizes the 8-digit Global Trade Identification Numbers. It was introduced for use on smallpackages where an EAN-8 barcode would be too large.</p>
</SampleDescription>
<ActionDescription>
   <p>This sample shows how to create the EAN-8 barcode. The `Type` property can be used to set the barcode type as`Ean8`.</p>
</ActionDescription>

<div class="control-section" style="width: 100%;height: 590px;">
    <div class="center">
        <div class="centercontrol">
            <SfBarcodeGenerator Width="200px" Height="150px" Type="@BarcodeType.Ean8" Value="11223344"></SfBarcodeGenerator>
        </div>
    </div>
    <div class="allowedText">
        <span style="font-weight: 600;"> Allowed Input characters :</span> This barocode supports 8 numbers as
        input.
    </div>
</div>

<style>
    .centercontrol {
        margin: auto;
        width: 50%;
        padding-left: 18%;
        height: 50%;
    }

    .allowedText {
        margin-left: 14px;
        margin-right: 17px;
        margin-top: 14px;
        width: auto;
        height: auto;
    }


    .center {
        margin-left: 14px;
        margin-right: 17px;
        margin-top: 14px;
        min-width: 280px;
        width: auto;
        border: 2px solid lightgray;
        min-height: 40%;
        padding-top: 35px;
    }
</style>
