@page "/presentation/write-protection"
@inject Microsoft.JSInterop.IJSRuntime JS
@using System.IO
@using Syncfusion.Blazor.Buttons
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment hostingEnvironment
@using BlazorDemos.Data.FileFormats.Presentation
@inherits SampleBaseComponent;

<SampleDescription>
    <p style="font-size:16px">This sample demonstrates how to set write protection for a PowerPoint presentation with password.</p>
</SampleDescription>
<ActionDescription>
  <b style="font-size:16px">Features:</b>
    <br />
    <ul style="font-size:16px">
			<li>Set write protection for PowerPoint presentation with password.</li>
            <li>Remove write protection of PowerPoint presentation.</li>	
    </ul>
    <br />
</ActionDescription>

<div class="control-section">
    <p style="font-size:16px">Click the button to view a PowerPoint presentation generated by Essential Presentation. Please note that Microsoft PowerPoint viewer or its equivalent is required to view the resultant document.</p>

    <div class="button-section">
        <div id="button-control">
		<div class="row">
                <div >
                    <p style="font-size:16px"> Password : Syncfusion </p>
                </div>
            </div>
            <div class="row">
                <div>
                    <SfButton @onclick="CreateProtection">Create Presentation</SfButton>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .control-section .row {
        margin: 10px 0;
    }
</style>

@code {
    MemoryStream documentStream;

    /// <summary>
    /// Create and download the Presentation document
    /// </summary>
    public async Task CreateProtection(MouseEventArgs args)
    {
        WriteProtectionService service = new WriteProtectionService(hostingEnvironment);
        documentStream = service.CreateWriteProtectionPresentation("Syncfusion");
        await JS.SaveAs("ProtectedPresentation.pptx", documentStream.ToArray());
    }
}