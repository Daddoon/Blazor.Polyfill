@page "/pdf/graphics-brushes"
@inject Microsoft.JSInterop.IJSRuntime JS
@using System.IO
@using Syncfusion.Blazor.Buttons
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment hostingEnvironment
@inherits SampleBaseComponent;
@*Hidden:Lines*@

@using BlazorDemos.Data.FileFormats.PDF

@*End:Hidden*@

<SampleDescription>
   <p>This sample demonstrates drawing of shapes with different brushes such as solid, tiling, Linear gradient, Radial gradient and with different<a target='_blank' href='https://help.syncfusion.com/file-formats/pdf/working-with-colorspace'> color spaces</a>. such as Cal RGB, ICC, Exponential interpolation, pantone and indexed color space.</p> 
</SampleDescription>
<ActionDescription>
   <p>More information about the brushes can be found in this documentation <a target='_blank' href='https://help.syncfusion.com/file-formats/pdf/working-with-brushes'>section.</a></p>
</ActionDescription>

<div class="control-section">
    <p style="font-weight:normal">Click the button to view a PDF document generated by Essential PDF. Please note that Adobe Reader or its equivalent is required to view the resultant document. </p>

    <div class="button-section">
        <div id="button-control">
            <div class="row">
                <div>
                    <SfButton @onclick="GeneratePDF">Generate PDF</SfButton>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .radio-control {
        margin: 0 0 5% 0;
    }

    .control-section .row {
        margin: 10px 0;
    }
</style>

@code {

     
    /// <summary>
    /// Create and download the simple PDF document
    ///<summary>
    protected async void GeneratePDF(MouseEventArgs args)
    {        
        GraphicBrushesService service = new GraphicBrushesService(hostingEnvironment);
        MemoryStream documentStream = service.CreatePdfDocument();
        await JS.SaveAs("GraphicBrushes.pdf", documentStream.ToArray());
    }
}
