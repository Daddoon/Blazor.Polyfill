@page "/pdf/table-features"
@inject Microsoft.JSInterop.IJSRuntime JS
@using System.IO
@using Syncfusion.Blazor.Buttons
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment hostingEnvironment
@inherits SampleBaseComponent;
@*Hidden:Lines*@

@using BlazorDemos.Data.FileFormats.PDF

@*End:Hidden*@

<SampleDescription>
    <p>This sample demonstrates the creation of richly formatted table to keep your data organized for both basic and advanced operation on cells, rows and columns along with headers and footers.</p>
</SampleDescription>
<ActionDescription>
   <p>More information about the document settings can be found in this documentation <a target='_blank'
href='https://help.syncfusion.com/file-formats/pdf/working-with-tables?_ga=2.224412378.1703522802.1584005056-1302582622.1556169414'> section.</a></p>
</ActionDescription>

<div class="control-section">
    <p style="font-weight:normal">Click the button to view a PDF document generated by Essential PDF. Please note that Adobe Reader or its equivalent is required to view the resultant document. </p>

    <div class="button-section">
        <div id="button-control">
            <div class="row">
                <div>
                    <SfButton @onclick="TableFeaturesPDF">Generate PDF</SfButton>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .radio-control {
        margin: 0 0 5% 0;
    }

    .control-section .row {
        margin: 10px 0;
    }
</style>

@code {  
    
    /// <summary>
    /// Create and download the simple PDF document
    ///<summary>
    protected async void TableFeaturesPDF(MouseEventArgs args)
    {	    
        TableFeaturesService service = new TableFeaturesService(hostingEnvironment);
        MemoryStream documentStream = service.TableFeaturesPDF();
        await JS.SaveAs("TableFeatures.pdf", documentStream.ToArray());
    }
}
